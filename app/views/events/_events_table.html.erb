<div class="table-responsive">
<table class="table table-dark">
  <thead>
    <tr>
      <th>Start date</th>
      <th>Duration</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% events.each do |event| %>
      <tr>
        <td><%= event.start_date %></td>
        <td><%= event.duration.to_s + ' min' %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.price.to_s + ' â‚¬' %></td>
        <td><%= event.location %></td>
        <td><%= button_to 'Show', event %></td>
        <% if event.admin == current_user %>
        <td><%= button_to 'Edit', edit_event_path(event), method: :get %></td>
        <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
